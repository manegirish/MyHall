<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/event_list_item_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/primary_circle"
            android:gravity="center"
            android:text="AH"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/event_list_item_time"
                android:layout_toStartOf="@+id/event_list_item_time"
                android:gravity="start"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textColor="@color/text_color_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_list_item_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:text="@string/app_name"
                android:textColor="@color/text_color_ternary"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/event_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/event_list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_color_secondary"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>